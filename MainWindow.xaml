<Window x:Class="DivineShopMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DivineShopMonitor"
        mc:Ignorable="d"
        Loaded="MainWindow_OnLoaded"
        Title="Divine Shop Monitor" Height="350" Width="525">

    <DockPanel LastChildFill="True">
        <Frame x:Name="MainGrid" DockPanel.Dock="Top" Height="100">
        </Frame>
        <TextBox x:Name="LogTextBox" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" AcceptsReturn="True" Text="{Binding Path=LogText}" />    
        </DockPanel>
        
</Window>
